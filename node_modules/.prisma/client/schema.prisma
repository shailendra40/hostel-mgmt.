generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hostel {
  id    Int    @id @default(autoincrement())
  name  String
  rooms Room[]
}

model Room {
  id       Int       @id @default(autoincrement())
  number   String
  hostelId Int
  hostel   Hostel    @relation(fields: [hostelId], references: [id])
  students Student[]
}

model Student {
  id     Int    @id @default(autoincrement())
  name   String
  roomId Int
  room   Room   @relation(fields: [roomId], references: [id])
}
